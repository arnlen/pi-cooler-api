<p id="notice"><%= notice %></p>

<h1>Temperatures</h1>

<table>
  <thead>
    <tr>
      <% @temperatures.keys.each do |key| %>
        <th><%= key %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @temperatures.each do |temperature| %>
        <td><%= temperature[1] %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Temperature', new_temperature_path %>
